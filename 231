local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
OrionLib:MakeNotification({
	Name = "系统",
	Content = "欢迎测试人员",
	Image = "rbxthumb://type=Asset&id=5107182114&w=150&h=150",
	Time = 2
})
local Window = OrionLib:MakeWindow({Name = "熊(阿尔法)", HidePremium = false, SaveConfig = true,IntroText = "通用脚本", ConfigFolder = "OrionTest"})

local statement = Window:MakeTab({
	Name = "警告",
	Icon = "rbxassetid://14359155637",
	PremiumOnly = false
})
statement:AddParagraph("警告", "脚本不在指定游戏执行，会发生传送别处的使用的情况，请明细")
local Tab = Window:MakeTab({
	Name = "大厅",
	Icon = "rbxassetid://14481493145",
	PremiumOnly = false
})
Tab:AddButton({
	Name = "传送至 金币奖励",
	Callback = function()
		game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(407, 39, -26)
	end 
}) 
Tab:AddButton({
	Name = "传送至 旧大厅",
	Callback = function()
		game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(520, 50, -16)
	end 
}) 
Tab:AddButton({
	Name = "传送至 R币商店",
	Callback = function()
		game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(8, 26, -114)
	end 
}) 
Tab:AddButton({
	Name = "传送至 彩蛋(分裂统治)",
	Callback = function()
		game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(76, -101, -43)
	end 
}) 
Tab:AddButton({
	Name = "传送至 诡异(菜单)房间",
	Callback = function()
		game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(436, 50, -4)
	end 
}) 
local T = Window:MakeTab({
	Name = "通用功能",
	Icon = "rbxassetid://14481493145",
	PremiumOnly = false
})

T:AddButton({
	Name = "管理员指令 开发者脚本",
	Callback = function()
		loadstring(game:HttpGet(("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"), true))()
	end
})

T:AddButton({
	Name = "踏空行走",
	Callback = function()
		loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostPlayer352/Test4/main/Float"))()
	end
})

T:AddToggle({
	Name = "夜视",
	Default = false,
	Callback = function(Value)
		if Value then
			game.Lighting.Ambient = Color3.new(1, 1, 1)
		else
			game.Lighting.Ambient = Color3.new(0, 0, 0)
		end
	end
})

T:AddToggle({
	Name = "穿墙",
	Default = false,
	Callback = function(Value)
		if Value then
			Noclip = true
			Stepped = game.RunService.Stepped:Connect(function()
				if Noclip == true then
					for a, b in pairs(game.Workspace:GetChildren()) do
						if b.Name == game.Players.LocalPlayer.Name then
							for i, v in pairs(game.Workspace[game.Players.LocalPlayer.Name]:GetChildren()) do
								if v:IsA("BasePart") then
									v.CanCollide = false
								end
							end
						end
					end
				else
					Stepped:Disconnect()
				end
			end)
		else
			Noclip = false
		end
	end
})

OrionLib:Init()
